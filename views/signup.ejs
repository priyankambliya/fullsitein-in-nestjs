<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </head>
  <body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
      <h1 class="text-2xl font-semibold text-center mb-4">Sign Up</h1>
      <form id="signup-form" action="users/signup" method="post">
        <div class="mb-4">
          <label for="username" class="block text-gray-600 text-sm mb-2"
            >Username</label
          >
          <input
            type="text"
            id="username"
            name="username"
            placeholder="Enter your username"
            class="w-full px-4 py-2 rounded border border-gray-300 focus:outline-none focus:border-blue-500"
          />
          <span id="username-error" class="text-red-500 hidden"
            >Please enter a username.</span
          >
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-600 text-sm mb-2"
            >Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Enter your email"
            class="w-full px-4 py-2 rounded border border-gray-300 focus:outline-none focus:border-blue-500"
          />
          <span id="email-error" class="text-red-500 hidden"
            >Please enter a email.</span
          >
        </div>
        <div class="mb-6">
          <label for="password" class="block text-gray-600 text-sm mb-2"
            >Password</label
          >
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            class="w-full px-4 py-2 rounded border border-gray-300 focus:outline-none focus:border-blue-500"
          />
          <span id="password-error" class="text-red-500 hidden"
            >Please enter a password.</span
          >
        </div>
        <button
          type="submit"
          class="w-full bg-blue-500 text-white font-semibold py-2 rounded hover:bg-blue-600 transition duration-300"
        >
          Sign Up
        </button>
      </form>
      <p class="text-sm text-gray-600 mt-4 text-center">
        Already have an account?
        <a
          href="/login"
          class="inline-block px-1 py-3 duration-300 hover:text-decoration-none"
          >Log In</a
        >
      </p>
    </div>
  </body>
  <script>
    $(document).ready(function () {
      $('#signup-form').submit(function (event) {
        // Prevent the form from submitting
        event.preventDefault();

        // Get form input values
        var username = $('#username').val();
        var email = $('#email').val();
        var password = $('#password').val();

        // Reset previous error messages and remove 'hidden' class
        $('#username-error').addClass('hidden');
        $('#email-error').addClass('hidden');
        $('#password-error').addClass('hidden');

        // Perform form validation
        var isValid = true;
        if (!username) {
          $('#username-error').removeClass('hidden');
          isValid = false;
        }
        if (!email) {
          $('#email-error').removeClass('hidden');
          isValid = false;
        }
        if (!password) {
          $('#password-error').removeClass('hidden');
          isValid = false;
        }

        // If all validation passes, you can submit the form
        if (isValid) {
          $('#signup-form')[0].submit();
        }
      });

      // Add event listeners to hide error messages when there's input
      $('#username').on('input', function () {
        $('#username-error').addClass('hidden');
      });
      $('#email').on('input', function () {
        $('#email-error').addClass('hidden');
      });
      $('#password').on('input', function () {
        $('#password-error').addClass('hidden');
      });
    });
  </script>
</html>
